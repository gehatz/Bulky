@model IEnumerable<Bulky.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<br/><br/>
<table class="d-lg-table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <td>
                    @cat.Name
                </td>
                <td>
                    @cat.DisplayOrder
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-secondary">
                            <i class="bg-info bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-secondary btn-danger">
                            <i class="bg-info bi-trash"></i> Dekete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
